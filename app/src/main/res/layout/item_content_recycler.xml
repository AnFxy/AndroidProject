<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--朋友圈，文字，> 跳转号-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <com.ilikexy.bigwork.zidingyi.RoundedSquare
            android:id="@+id/imag_item_content"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="5sp"
            app:roundedRadius="6sp"
            />
        <TextView
            android:id="@+id/text_item_content"
            android:layout_weight="2"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="名字"
            android:typeface="monospace"
            android:textColor="#000000"
            android:padding="8sp"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/text_hint_item_content"
            android:layout_weight="4"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text=""
            android:typeface="monospace"
            android:textColor="#a0a0a0"
            android:padding="8sp"
            android:gravity="center_vertical"
            android:textSize="14sp"/>
    </LinearLayout>
    <!--细微下划线-->
    <LinearLayout
        android:id="@+id/linear_line_itemcontent"
        android:layout_width="match_parent"
        android:layout_height="0.5sp"
        android:orientation="horizontal">
        <View
            android:background="#ffffff"
            android:layout_weight="1"
            android:layout_width="0sp"
            android:layout_height="match_parent"/>
        <View
            android:layout_weight="5"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:background="#ededed"/>
    </LinearLayout>
    <!--分割灰色区域，设置控件是否可视化-->
    <LinearLayout
        android:id="@+id/view_gray_itemcontent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:background="#aaaaaa"
            android:layout_width="match_parent"
            android:layout_height="0.1sp"/>
        <View
            android:background="#ededed"
            android:layout_width="match_parent"
            android:layout_height="9sp"/>
        <View
            android:background="#aaaaaa"
            android:layout_width="match_parent"
            android:layout_height="0.1sp"/>
    </LinearLayout>
</LinearLayout>