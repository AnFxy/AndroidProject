<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--图片，昵称-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65sp"
        android:background="#ffffff"
        android:orientation="horizontal">
        <com.ilikexy.bigwork.zidingyi.RoundedSquare
            android:id="@+id/imag_item_addfriend"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:layout_gravity="center"
            android:layout_marginLeft="15sp"
            android:layout_marginRight="5sp"
            app:roundedRadius="6sp"
            />
        <TextView
            android:id="@+id/text_item_addfriend"
            android:layout_weight="2"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text="昵称"
            android:typeface="monospace"
            android:textColor="#000000"
            android:padding="8sp"
            android:gravity="center_vertical"
            android:textSize="16sp"/>
        <TextView
            android:layout_weight="2.5"
            android:layout_width="0sp"
            android:layout_height="match_parent"
            android:text=""
            android:typeface="monospace"
            android:textColor="#a0a0a0"
            android:padding="8sp"
            android:gravity="center_vertical"
            android:textSize="14sp"/>
        <ImageView
            android:id="@+id/imag_addfriend_addfriend"
            android:layout_gravity="center"
            android:layout_width="60sp"
            android:layout_height="30sp"
            android:layout_marginRight="10sp"
            android:src="@drawable/tianjia"></ImageView>
    </LinearLayout>

    <!--分割灰色区域，设置控件是否可视化-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <View
            android:background="#aaaaaa"
            android:layout_width="match_parent"
            android:layout_height="0.1sp"/>
        <View
            android:background="#ededed"
            android:layout_width="match_parent"
            android:layout_height="9sp"/>
        <View
            android:background="#aaaaaa"
            android:layout_width="match_parent"
            android:layout_height="0.1sp"/>
    </LinearLayout>
</LinearLayout>